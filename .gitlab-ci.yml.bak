image: registry.cn-shanghai.aliyuncs.com/c7n/cibase:0.10.1
stages:
- Docker构建
- 发布Chart
Docker构建:
  stage: Docker构建
  script:
  - saveImageMetadata
  - kaniko --skip-tls-verify -c $PWD/. -f $PWD/Dockerfile -d ${DOCKER_REGISTRY}/${GROUP_NAME}/${PROJECT_NAME}:${CI_COMMIT_TAG}
  only:
    refs:
    - master

